<% @cafe = cafe %>
<li id="cafe-<%= cafe.id %>">
  <%= link_to gravatar_for(cafe.user, size: 50), cafe.user %>
  <span class="name"><%= link_to cafe.name, cafe_path(cafe) %></span>
  <span>
    <%= link_to((image_tag cafe.picture.thumb200.url), cafe_path(cafe.id), class: 'cafe-picture') if cafe.picture.url.present? %>
  </span>
  <span class="order"><%= cafe.order %></span><br>
  <%= render 'users/favorite_form' %>
  <span class="description"><%= cafe.description %></span><br>
  <span class="popularity">人気度：<%= cafe.popularity %></span><br>
  <span class="reference"><%= link_to "作り方", cafe.reference, target: :_blank %></span>
    <%= time_ago_in_words(cafe.created_at) %>前に投稿
  </span>
  <% if current_user.admin? || (current_user == cafe.user) %>
    <%= link_to "削除", cafe_path(cafe), method: :delete,
                       data: { confirm: "本当に削除しますか？" } %>
  <% end %>
</li>
