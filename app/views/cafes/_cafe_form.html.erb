<%= form_with model: @cafe, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="picture">
    <%= f.label :picture %>　<span class="input-unneed">※任意</span>
    <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: 'form-control', id: 'cafe_picture' %>
  </span>
  <div class = 'form-group'>
    <%= f.label :name %>　<span class="input-need">※必須</span>
    <%= f.text_field :name, class: 'form-control', id: 'cafe_name' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :description %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'cafe_description' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :order %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :order, class: 'form-control', id: 'cafe_order' %>
  </div>
  <%= f.fields_for :ingredients do |i| %>
    <div class="row">
      <div class="col-md-9">
        <div class = 'form-group'>
          <%= i.label :name %>　<span class="input-unneed">※任意</span>
          <%= i.text_field :name, class: 'form-control ingredient_name' %>
        </div>
      </div>
    </div>
  <% end %>
  <%= render partial: "ingredient_form", locals: {f: f} %>
  <%= render partial: "ingredient_form", locals: {f: f} %>
  <%= render partial: "ingredient_form", locals: {f: f} %>
  <%= render partial: "ingredient_form", locals: {f: f} %>
  <%= render partial: "ingredient_form", locals: {f: f} %>
  <%= render partial: "ingredient_form", locals: {f: f} %>
  <%= render partial: "ingredient_form", locals: {f: f} %>
  <%= render partial: "ingredient_form", locals: {f: f} %>
  <%= render partial: "ingredient_form", locals: {f: f} %>
  <div class = 'form-group'>
    <%= f.label :reference %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :reference, class: 'form-control', id: 'cafe_reference' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :popularity %> [1~5]　<span class="input-unneed">※任意</span>
    <%= f.text_field :popularity, class: 'form-control', id: 'cafe_popularity' %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>

<script type="text/javascript">
  $('#cafe_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('アップロードできる写真の最大サイズは5MBです。5MB以下の画像を選択してください');
    }
  });
</script>
