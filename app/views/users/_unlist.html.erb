<% list = List.find_by(cafe_id: @cafe.id) %>
<%= link_to "/lists/#{list.id}/destroy",
            method: :delete,
            class: 'unlist',
            remote: true do %>
  <% if current_user == @cafe.user %>
    <div class="list-btn-unlist"><i class="fas fa-list-alt"></i> 行く予定リストに追加済み</div>
  <% else %>
    <div class="list-btn-unlist"><i class="fas fa-utensils"></i> 食べたいリクエスト済み</div>
  <% end %>
<% end %>
